<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/font_size"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/font_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/increaseFontSize"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toEndOf="@id/reduceFontSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <Button
        android:id="@+id/reduceFontSize"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/reduce_font_size_description"
        android:onClick="reduceTextSize"
        android:text="@string/reduce_font_size"
        android:textColor="?attr/colorOnSurface"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <Button
        android:id="@+id/increaseFontSize"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/increase_font_size_description"
        android:onClick="increaseTextSize"
        android:text="@string/increase_font_size"
        android:textColor="?attr/colorOnSurface"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="381dp"
        android:layout_height="493dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@id/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

</androidx.constraintlayout.widget.ConstraintLayout>